.do.bg-wrap
	.case
		.do__title.h1 Делаем #[strong полусухую #[br]стяжку пола]
		.do__list.row
			.do__item От 300 руб/м#[sup 2] без материала
			.do__itemОт 450 руб/м#[sup 2] с материалом
		.do__form.form.--line
			.form__inner
				.form__title Рассчитайте точную стоимость по телефону за 2 минуты
				.form__subtitle Менеджер задаст уточняющие вопросы и сделаем скидку в зависимости от объема
				.form__wrap
					.form__input.input.--md.--bg-gray.--icon.--phone.--required
						.input__wrap
							input.input__area(type="number" name="phone" placeholder="+7 ( ___ ) ___ - __ - __")
						.input__icon
					button.form__btn.btn.--md.--bg-blue РАССЧИТАТЬ СТОИМОСТЬ
				.form__policy Нажимая на кнопку, вы даете согласие на обработку своих персональных #[br]данных и соглашаетесь с политикой конфиденциальности.

		.do__img
			img(src="" alt="")
		.do__round.round
			.round__wrap
				.round__img
					img(src="" alt="")
				.round__text Скидка до 10% на стяжку #[br]при заказе штукатурки
	.do__bg.bg
		img(src="" alt="")
