.cheap.bg-wrap
	.case
		.cheap__img-wrap
			.cheap__person.person
				.person__icon
					img(src="" alt="")
				.person__name ПЕТР #[br]НИКИТИН
				.person__position Руководитель #[br]компании
			.cheap__img
				img(src="" alt="")
		.cheap__content
			.cheap__title.h1 Вы уже рассчитывали #[br]стоимость в других #[br]компаниях #[strong и ищете#[br]дешевле?]
			.cheap__subtitle.h2 Даем гарантию лучшей цены
			.cheap__why.c-why
				.c-why__title Если у вас уже есть расчет стоимости, мы снизим цену со скидкой до 5%
				.c-why__list
					.c-why__item
						.c-why__icon
						.c-why__name #[span Почему мы гарантируем самую низкую цену?]

			.cheap__form.form.--line
				.form__inner
					.form__title Пришлите расчет стоимости другой компании #[br]и получите более выгодное предложение
					.form__wrap
						.form__input.input.--md.--bg-gray.--icon.--phone.--required
							.input__wrap
								input.input__area(type="number" name="phone" placeholder="+7 ( ___ ) ___ - __ - __")
							.input__icon
						button.form__btn.btn.--md.--bg-blue РАССЧИТАТЬ СТОИМОСТЬ
					.form__policy Нажимая на кнопку, вы даете согласие на обработку своих персональных #[br]данных и соглашаетесь с политикой конфиденциальности.

	.cheap__bg.bg
		img(src="" alt="")
