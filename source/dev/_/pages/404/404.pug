	-
		title = ""
		breadcrumbs = [
			['Главная', 'index.html'],
			[title]
		]
block content
	.page404.first-slide
		.case
			.page404__wrap
				.page404__head
					.page404__img
						img(src="_/uploads/404.png" alt="")
